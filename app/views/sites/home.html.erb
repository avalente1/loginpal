<% unless current_user.present? %>
  <%= link_to "Forgot Password?", "#", id:"forgot", remote: true %>
<% end %>
<div class="row-fluid">
  <div class="span10 offset1">
    <h1 class = "text-center" id="need"> Free & <i class="fa fa-lock"></i> Secure Password Manager</h1>

    <% if current_user.present? %>
        <a href="#myModal" role="button" class="btn btn-primary modalbutton" data-toggle="modal">Refer friends!</a>
      <% else %>
      <!-- MODAL BELOW -->
      <a href="#myModal" role="button" class="btn btn-primary modalbutton" data-toggle="modal">SIGN UP NOW</a>

        <%= render 'sites/modal' %>

      <!-- MODAL ABOVE -->
    <% end %>
    </br>

    <div class="row-fluid">
      <div class="span6 text-center">
        <h3 class="taglines"> <span class="badge badge-warning badger">1</span> Create & manage password <span class="safetytagline"> hints</span> for the websites you visit<h3>
        <a href="#myModal" role="button" class="thumbnail" alt="Password Hint Manager" data-toggle="modal">
          <img src="assets/loginpal_sites_index.png" alt="Password Hint Manager" class="homescreenshot">
        </a>
      </div>
      <div class="span6 text-center">
        <h3 class="taglines"><span class="badge badge-warning badger">2</span> Easily access <span class="safetytagline"> hints</span> when you need them most with our chrome extension
        </h3>
        <a href="https://chrome.google.com/webstore/detail/loginpal/efagimnfpcpaoommipfahieedckachdh" target= "_blank" class="thumbnail">
          <%= image_tag("loginpal_chrome_extension_uber_login.png", :class=>"homescreenshot", :alt => "screenshot2") %>
        </a>
      </div>
    </div>
    <h2 class="bottomtagline text-center"> Password <span class="safetytagline"> hints</span> are the safest way to help you login to the websites you visit
    </h2>
  </div>
</div>
<script>
  $('#forgot').click(function(){
    $('#forgot').hide();
    $('.navbar-form').replaceWith('<%= j(render 'password_resets/reset_pass_email') %>');
  });
</script>

