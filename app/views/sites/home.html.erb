<h1 class = "text-center">Welcome to LoginPal</h1><h1 class = "text-center pull-right">
<h3 class = "text-center">With just <em>one</em> click get a Password Hint.</h3>
<p class="lead text-center">Never get stuck trying to remember a password again.</p>



<!-- MODAL BELOW -->

<a href="#myModal" role="button" class="btn btn-primary modalbutton" data-toggle="modal">SIGN UP</a>
<div id = "oppositehome">
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">SIGN UP</h3>
    </div>
    <div class="modal-body">
    <h4 class = "text-center"><%= link_to '<i class="icon-google-plus"></i></i> Download our chrome extension before signing up'.html_safe, "https://chrome.google.com/webstore/detail/loginpal/efagimnfpcpaoommipfahieedckachdh", target: "_blank" %></h4></br>


    <p>
      <%= form_tag users_url, method: "post" do %>
        <fieldset>
          <div class="row-fluid">
            <div class="center">
              <%= email_field_tag :email, nil, placeholder: "Email" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="center">
              <%= password_field_tag :password, nil, placeholder: "Password" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="center">
              <%= password_field_tag :password_confirmation, nil, placeholder: "Password confirmation" %>
            </div>
          </div>

          <div class="row-fluid">
            <div class="center">
              <%= submit_tag "Submit", class: "btn btn-primary" %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </p>

    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <!-- <button class="btn btn-primary">Save changes</button> -->
    </div>
  </div>
</div>

<!-- MODAL ABOVE -->

<div id="myCarousel" class="carousel slide homecarousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item"><%= image_tag("image2.png", :class=>"homescreenshot", :alt => "screenshot2") %>
      <div class = "carousel-caption">
        <h4>When you get stuck at a login, simply click the chrome extension and get your reminder.</h4>
      </div>
    </div>
    <div class="item"><%= image_tag("image1.png", :class=>"homescreenshot", :alt => "screenshot1") %>
      <div class = "carousel-caption">
        <h4>Manage your usernames and password hints of the sites you visit all from one, secure place.</h4>
      </div>
    </div>

   <div class="item"><%= image_tag("image3.png", :class=>"homescreenshot", :alt => "screenshot3") %>
      <div class = "carousel-caption">
        <h4>Ever need help remembering your passwords?  We've got your back.</h4>
      </div>
    </div>

  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>




