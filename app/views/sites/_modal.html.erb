<div id = "oppositehome">
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">SIGN UP</h3>
    </div>
    <div class="modal-body">


    <p>
      <%= form_tag users_url, method: "post" do %>
        <fieldset>
          <div class="row-fluid">
            <div class="center">
              <%= email_field_tag :email, nil, placeholder: "Email" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="center">
              <%= password_field_tag :password, nil, placeholder: "Password" %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="center">
              <%= password_field_tag :password_confirmation, nil, placeholder: "Password confirmation" %>
            </div>
          </div>

          <div class="row-fluid">
            <div class="center">
              <%= submit_tag "Create Account", class: "btn btn-primary" %>
            </div>
          </div>
        </fieldset>
      <% end %>
    </p>

    </div>
    <div class="modal-footer">
      <button class="btn btn-inverse" data-dismiss="modal" aria-hidden="true">Close</button>
      <!-- <button class="btn btn-primary">Save changes</button> -->
    </div>
  </div>
</div>
