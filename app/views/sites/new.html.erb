Site entry

<%= form_tag "http://localhost:3000/sites", method: "post" do %>
  <%= label_tag :company, "Company" %>
  <%= text_field_tag :company, nil, placeholder: "Company" %>
  <%= label_tag :site, "Website" %>
  <%= text_field_tag :site, nil, placeholder: "Website" %>
  <%= label_tag :site, "Username" %>
  <%= text_field_tag :username, nil, placeholder: "Username" %>
  <%= label_tag :site, "Password Hint" %>
  <%= text_field_tag :pwhint, nil, placeholder: "Password Hint" %>
  <%= submit_tag "Submit" %>
<% end %>
