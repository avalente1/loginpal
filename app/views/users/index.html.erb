<container>
  <div class= "row-fluid">
    <div class="span12 text-center">
      <h1> <%= link_to "LoginPal", users_url %> </h1>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12 text-center">
      <h3><%= label_tag :email, "Client Login:" %></h3>
    </div>
  </div>
  <%= form_tag user_url(params[:email]), method: "get" do %>
    <fieldset>
      <div class="row-fluid">
        <div class="span12 center">
          <%= text_field_tag :email, nil, placeholder: "Email" %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12 center">
          <%= password_field_tag :password, nil, placeholder: "Password" %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12 center remember">
          <%= check_box_tag :favorite, name: "Remember Me" %>
          <%= label_tag :favorite, "Remember Me" %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span12 center">
          <%= submit_tag "Login", class: "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  <% end %>
</container>
